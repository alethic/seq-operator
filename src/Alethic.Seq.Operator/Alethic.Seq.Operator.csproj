<Project Sdk="Microsoft.NET.Sdk.Web">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net9.0</TargetFramework>
        <RuntimeIdentifiers>win-x64;linux-x64</RuntimeIdentifiers>
        <Nullable>enable</Nullable>
        <SelfContained>true</SelfContained>
        <ContainerRepository>seq-operator-image</ContainerRepository>
        <GenerateOperatorResources>true</GenerateOperatorResources>
    </PropertyGroup>
    
    <ItemGroup>
        <ContainerEnvironmentVariable Include="ASPNETCORE_FORWARDEDHEADERS_ENABLED" Value="true" />
        <ContainerEnvironmentVariable Include="ASPNETCORE_ENVIRONMENT" Value="Production" />
        <ContainerEnvironmentVariable Include="ASPNETCORE_URLS" Value="http://*:8080" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="KubeOps.Generator" Version="9.11.8">
          <PrivateAssets>all</PrivateAssets>
          <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
        <PackageReference Include="KubeOps.Operator" Version="9.11.8" />
        <PackageReference Include="Microsoft.Extensions.Caching.Memory" Version="9.0.10" />
        <PackageReference Include="Seq.Api" Version="2025.2.2" />
        <PackageReference Include="System.Text.Json" Version="9.0.10" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Alethic.Seq.Operator.Core\Alethic.Seq.Operator.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="config\" />
    </ItemGroup>

</Project>
